<Window x:Class="Dot_and_Box_Game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dot_and_Box_Game"
        mc:Ignorable="d"
        Title="Dot and Box Game" Height="350" Width="525">
    <Grid Margin="-35,-28,0,-21">
        <Canvas x:Name="Game_Board" HorizontalAlignment="Left" Height="348" Margin="10,10,0,0" VerticalAlignment="Top" Width="532">
            <TextBox x:Name="Players" Height="38" Canvas.Left="402" TextWrapping="Wrap" Text="TextBox" Canvas.Top="22" Width="130" FontFamily="Trebuchet MS" FontWeight="Bold" TextChanged="Players_TextChanged"/>
            <Button x:Name="begin_game" Content="Start a Game" Canvas.Left="452" Canvas.Top="95" Width="80" Click="begin_game_Click"/>
            <TextBox x:Name="Player_Score" Height="38" Canvas.Left="402" TextWrapping="Wrap" Text="Player Scores are:" Canvas.Top="57" Width="130" FontFamily="Trebuchet MS" FontWeight="Bold"/>
        </Canvas>
    </Grid>
</Window>
